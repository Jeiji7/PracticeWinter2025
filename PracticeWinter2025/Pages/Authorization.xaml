<Page x:Class="PracticeWinter2025.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticeWinter2025.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="#ffffe1" BorderThickness="1.5" Margin="5,5,5,5">
            <TextBlock VerticalAlignment="Center" Margin="10 0" FontSize="48" HorizontalAlignment="Center">Авторизация</TextBlock>
        </Border>
        <Border BorderBrush="#ffffe1" BorderThickness="1.5" Margin="5,5,5,5" Grid.Row="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center"  VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Margin="10 0 43 0" FontSize="30">Логин</TextBlock>
                    <TextBox Width="300" x:Name="LoginTB" Background="White" Padding="5" Margin="10 0" FontSize="30"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Margin="10 0 25 0" FontSize="30">Пароль</TextBlock>
                    <PasswordBox  Width="300" x:Name="PassWordPS" Padding="5" Margin="10 0" FontSize="30"></PasswordBox>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" BorderBrush="#ffffe1" BorderThickness="1.5" Margin="5,5,5,5" >
            <Button  Width="300" Height="45" Click="Button_Click_Enter" Background="#ffffe1">
                <TextBlock FontSize="30">
                Войти
                </TextBlock>
            </Button>
        </Border>
    </Grid>
</Page>
