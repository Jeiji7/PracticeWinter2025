<Page x:Class="PracticeWinter2025.Pages.AddClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticeWinter2025.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClient">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="15*"/>
        
        </Grid.RowDefinitions>

        <TextBlock FontSize="40">Добавление клиента</TextBlock>
        <Button Width="50" Height="50" HorizontalAlignment="Left" Margin="10 0" Click="Button_Click_Exit">
            <Image Source="/Clients/ArrowBT.png"/>
        </Button>

        <Border BorderBrush="#ff9c1a" BorderThickness="1.5" Margin="5,5,5,5" Grid.Row="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center"  VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Фамилия"  Margin="10" FontSize="24"></TextBlock>
                    <TextBox x:Name="FirstName"  Width="200" Height="50" ></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Имя" Width="140"  Margin="10" FontSize="24" ></TextBlock>
                    <TextBox x:Name="QuantityTB"  Width="200" Height="50" ></TextBox>
                </StackPanel>
            </StackPanel>
        </Border>

        
        
        <TextBlock Text="Отчество" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="24" ></TextBlock>
        <TextBox x:Name="ResultTB" Grid.Row="3" Width="200" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="160 0 0 0"></TextBox>
        <TextBlock Text="Пол" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="24" ></TextBlock>
        <ComboBox x:Name="MaterialCB" DisplayMemberPath="Name" Grid.Row="4" Width="200" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="160 0 0 0"></ComboBox>

        <TextBlock Text="Отчество" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 60 0" FontSize="24" ></TextBlock>
        <TextBox x:Name="TimeTB" Grid.Row="2"  Width="200" Height="50" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="0 0 80 0"></TextBox>
        <TextBox x:Name="CountMaterialTB" Grid.Row="4" Width="200" Height="50" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="0 0 80 0"></TextBox>
    </Grid>
</Page>
